/* pages/kdetails/kdetails.wxss */
/* 头部 */
.top {
  z-index: 2;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: white;
  height: 80rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
}

.top .title {
  font-weight: 600;
  position: absolute;
  top: 10rpx;
  left: 50%;
  margin-left: -70rpx;
}

.top image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}

/* 轮播图 */
.swiper {
  margin-top: 90rpx;
  height: 420rpx;
}

.swiper image {
  height: 420rpx;
}

/* 标题内容 */
.content {
  padding: 20rpx;

  height: 250rpx;
}

.content .title {
  margin-bottom: 20rpx;
  font-weight: 600;
  line-height: 50rpx;
  font-size: 38rpx;
  color: #333;
}

.content .type,
.content .num {
  font-size: 30rpx;
  color: #999;
  background-color: #fff;
  line-height: 50rpx;
}

.content .num {
  font-style: italic;
}

.to {
  overflow: hidden;
  display: flex;
  align-items: center;
  float: left;
  margin: 20rpx 0;
}

.to image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.to text {
  margin: 0 20rpx;
}

/* 课程详情 */
.tabs-box {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 1400rpx;
}

.tabs-box image {
  width: 100%;
}

.custom-image image {
  position: relative;
  top: 100rpx;
  left: 120rpx;
  width: 120rpx;
  height: 110rpx;
}

.van-empty__image {
  height: 200rpx !important;
}

.van-empty {
  padding: 0 !important;
}

.sort-box {
  margin: 30rpx 0;
  margin-left: 110rpx;
  width: 500rpx;
  display: flex;
  justify-content: space-evenly;
}

.sort-box view {
  display: flex;
  align-items: center;
  border: 2rpx solid #ccc;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  border-radius: 60rpx;
  color: #ccc;
}

.sort-box view image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}

.sort-box .sort-box-active {
  border: 2rpx solid #ffa23a;
  color: #ffa23a;
}

/* 评论 */
.ping {
  display: flex;
  margin: 20rpx;
}

.ping .left {
  width: 100rpx;
}

.ping .left .img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.ping .left .img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.ping .right image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.hui {
  color: #999;
  font-size: 30rpx;
}

/* 尾部 */
.footer {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex
}

.footer .left {
  width: 50%;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.footer .price {
  margin-left: 60rpx;
  color: #44a426;
}

.footer .kefu {
  text-align: center;
}

.footer .kefu image {
  width: 40rpx;
  height: 40rpx;
}

.footer .kefu text {
  position: absolute;
  top: 30rpx;
  left: 288rpx;
  color: #999;
  font-size: 30rpx;
}

.footer .right {
  width: 50%;
  color: white;
  text-align: center;

  background-color: #f15a24;
}
/* 课程安排 */
.list{
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  align-items: center;
  margin: 30rpx 20rpx;
  font-size: 30rpx;
  background-color: #f6f6f6;
}
.list image{
  width: 20rpx;
  height: 20rpx;
}
.list .num{
  position: absolute;
  bottom: 10rpx;
  right: 60rpx;
  color: #ff8800;
}
